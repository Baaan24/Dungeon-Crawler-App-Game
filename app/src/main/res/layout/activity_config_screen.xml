<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">



    <TextView
        android:id="@+id/playerNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="660dp"
        android:text="Player Name"
        android:textColor="@color/black"
        android:textSize="30sp"
        />


    <EditText
        android:id="@+id/playerName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Enter Player's name"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/enterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="220dp"
        android:text="Enter"
        />

    <TextView
        android:id="@+id/setDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Level of Difficulty"
        android:textColor="@color/black"
        android:layout_marginTop="130dp"
        android:textSize="30sp"
        />

    <RadioGroup
        android:id="@+id/selectDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setDifficulty"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/optionEasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:onClick="checkDifficulty"
            android:text="Easy"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/optionMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:onClick="checkDifficulty"
            android:text="Medium"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/optionHard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:onClick="checkDifficulty"
            android:text="Hard"

            android:textColor="#000000" />
    </RadioGroup>



    <TextView
        android:id="@+id/avatarSelectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Avatar"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginTop="247dp"

        android:layout_marginLeft="34dp"

        />
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="300dp"
        android:src="@drawable/avatar1"
        android:clickable="true"
        />
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="128dp"
        android:clickable="true"
        android:src="@drawable/avatar2"
        />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="256dp"
        android:clickable="true"
        android:src="@drawable/avatar3"
        />


    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="125dp"
    />

    <TextView
        android:id="@+id/summaryTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/summaryTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="400dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/characterSprite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@drawable/img"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="120dp"
        />




</RelativeLayout>